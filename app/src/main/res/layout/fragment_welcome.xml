<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modules.ui.welcome.WelcomeFragment">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/enterCardDetails"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:text="Enter Card Input"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/btnScanCard"
            app:layout_constraintEnd_toEndOf="@id/btnScanCard"
            app:layout_constraintStart_toStartOf="@id/btnScanCard"
            app:strokeColor="@color/colorAccent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanCard"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:text="Scan Card"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>